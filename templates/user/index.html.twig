{% extends 'admin.html.twig' %}

{% block title %}{{ 'Users :: KingsMeal' | trans }}{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th class="id-column">{{'ID'|trans}}</th>
                <th>{{'Username'|trans}}</th>
                <th style="width: 200px;" class="pull-right">{{'Roles'|trans}}</th>
                <th class="pull-right actions-column">{{'Actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td class="pull-right">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td class="pull-right">
                    <div class="buttons-group button-group-pull-right">
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="button button-small">{{'Show'|trans}}</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="button button-small">{{'Edit'|trans}}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">
                    <div class="alert">
                        <div class="alert-message">{{ 'Can\'t find any user' | trans }}</div>
                        <div class="alert-actions">
                            <a href="{{ url('user_new') }}" class="button"><span class="icon">📝</span><span>{{ 'Create first user?' | trans }}</span></a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
