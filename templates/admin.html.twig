{% set current_path = app.request.get('_route') %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap&subset=cyrillic" rel="stylesheet">

    {{ encore_entry_link_tags('admin') }}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="grid admin-container">
    <div class="admin-sidebar">
        <div class="admin-section-header">
            <span class="project-name">KingsMeal</span>
        </div>
        <nav class="nav-section">
            <span class="nav-header">Товары</span>
            {% apply spaceless %}
            <a href="{{ path('product_index') }}" class="nav-item {% if current_path == 'product_index' %}active{% endif %}">
                Все товары
                {% if kingsmeal.productsCount > 0 %}<span class="nav-item-badge">{{ kingsmeal.productsCount }}</span>{% endif %}
            </a>
            {% endapply %}
            <a href="{{ path('product_new') }}" class="nav-item {% if current_path == 'product_new' %}active{% endif %}">Добавить товар</a>
        </nav>
        <nav class="nav-section">
            <span class="nav-header">Заказы</span>
            {% apply spaceless %}
            <a href="{{ path('order_index') }}" class="nav-item {% if current_path == 'order_index' %}active{% endif %}">
                Все заказы
                {% if kingsmeal.ordersCount > 0 %}<span class="nav-item-badge">{{ kingsmeal.ordersCount }}</span>{% endif %}
            </a>
            {% endapply %}
            {% apply spaceless %}
            <a href="{{ path('order_unprocessed') }}" class="nav-item {% if current_path == 'order_unprocessed' %}active{% endif %}">
                Новые заказы
                {% if kingsmeal.unprocessedOrdersCount > 0 %}<span class="nav-item-badge">{{ kingsmeal.unprocessedOrdersCount }}</span>{% endif %}
            </a>
            {% endapply %}
        </nav>
        <nav class="nav-section">
            <span class="nav-header">Категории</span>
            {% apply spaceless %}
            <a href="{{ path('category_index') }}" class="nav-item {% if current_path == 'category_index' %}active{% endif %}">
                Все категории
                {% if kingsmeal.categoriesCount > 0 %}<span class="nav-item-badge">{{ kingsmeal.categoriesCount }}</span>{% endif %}
            </a>
            {% endapply %}
            <a href="{{ path('category_new') }}" class="nav-item {% if current_path == 'category_new' %}active{% endif %}">Добавить категорию</a>
        </nav>
        <nav class="nav-section">
            <span class="nav-header">Пользователи</span>
            {% apply spaceless %}
            <a href="{{ path('user_index') }}" class="nav-item {% if current_path == 'user_index' %}active{% endif %}">
                Все пользователи
            </a>
            {% endapply %}
            <a href="{{ path('user_new') }}" class="nav-item {% if current_path == 'user_new' %}active{% endif %}">Добавить пользователя</a>
        </nav>
        <nav class="nav-section">
            <span class="nav-header">testing</span>
            <a href="javascript:" class="nav-item">Item 1</a>
            <a href="javascript:" class="nav-item">Item 2<span class="nav-item-badge">10+</span></a>
            <a href="javascript:" class="nav-item">Item 3</a>
        </nav>
    </div>
    <div class="admin-content">
        <div class="admin-section-header">
            <nav class="admin-header-navigation">
{#                <a href="javascript:" class="nav-item">Projects</a>#}
            </nav>
        </div>
        <div class="admin-section-content {% block content_classes "" %}">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
{{ encore_entry_script_tags('admin') }}
{% block javascripts %}{% endblock %}
</body>
</html>
