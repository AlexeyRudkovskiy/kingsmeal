<form method="post" action="{{ path('advertising_delete', {'id': advertising.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ advertising.id) }}">
    <div class="buttons-group">
        <a href="{{ path('advertising_edit', {'id': advertising.id}) }}" class="button">{{ 'Edit' | trans }}</a>
        <a href="javascript:" onclick="confirm('{{ 'Do you want to delete this advertising?' | trans }}') ? this.parentElement.parentElement.submit() : console.log('');" class="button">{{ 'Delete' | trans }}</a>
    </div>
</form>
