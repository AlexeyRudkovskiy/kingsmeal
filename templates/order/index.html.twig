{% extends 'admin.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th class="id-column">Id</th>
                <th style="width: 250px;">Имя и фамилия</th>
                <th>Адрес доставки</th>
                <th style="width: 175px;" class="pull-right">Стоимость заказа</th>
                <th class="actions-column small-actions-column pull-right">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.fullName }}</td>
                <td>{{ order.fullAddress }}</td>
                <td class="pull-right">{% apply spaceless %}
                    {% set price = 0 %}
                    {% for orderedProduct in order.products %}
                        {% set price = price + (orderedProduct.quantity * orderedProduct.price) %}
                    {% endfor %}
                    {{ price | number_format(2) }} грн
                    {% endapply %}</td>
                <td class="pull-right">
                    <a href="{{ path('order_show', {'id': order.id}) }}" class="button button-small">Подробнее</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    <div class="alert">
                        <div class="alert-message">Пользователи ещё не сделали ни одного заказа</div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(orders) }}
    </div>
{% endblock %}
