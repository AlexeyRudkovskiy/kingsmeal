{% extends 'admin.html.twig' %}

{% block title %}{{ 'Category - %name% :: KingsMeal' | trans({ '%name%': category.name }) }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table class="table details-table">
        <tbody>
            <tr>
                <th>{{ 'ID' | trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name' | trans }}</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Описание' | trans }}</th>
                <td>{{ category.description | nl2br }}</td>
            </tr>
            <tr>
                <th>{{ 'Image' | trans }}</th>
                <td>{% if category.imageFilename != null %}<img src="{{ asset('uploads/photos/' ~ category.imageFilename) }}" style="width: 200px;" />{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Products' | trans }}</th>
                <td>
                    <ul>
                        {% for product in category.products %}
                        <li><a href="{{ url('product_show', { id: product.id }) }}">{{ product.name }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
